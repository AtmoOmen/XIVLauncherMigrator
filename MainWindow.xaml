<Window x:Class="XIVLauncherMigrator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="我的意思是 XIVLauncher 滚出我的 C 盘" 
        Height="370" 
        Width="620"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        FontFamily="Microsoft YaHei"
        TextOptions.TextFormattingMode="Display"
        TextOptions.TextRenderingMode="ClearType"
        Background="#FFFFFF">
    
    <Window.Resources>
        <Style x:Key="TextBoxStyle" TargetType="TextBox">
            <Setter Property="Background" Value="#F8F9FA"/>
            <Setter Property="Foreground" Value="#212529"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#DEE2E6"/>
            <Setter Property="Padding" Value="10,7"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4"
                                Effect="{DynamicResource TextBoxShadow}">
                            <ScrollViewer x:Name="PART_ContentHost" Foreground="{TemplateBinding Foreground}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#0078D4"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#006CBE"/>
                                <Setter Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect BlurRadius="10" ShadowDepth="1" Opacity="0.2"/>
                                    </Setter.Value>
                                </Setter>
                                <Setter TargetName="border" Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="1.02" ScaleY="1.02"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#005BA1"/>
                                <Setter TargetName="border" Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="0.98" ScaleY="0.98"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ProgressBarStyle" TargetType="ProgressBar">
            <Setter Property="Height" Value="10"/>
            <Setter Property="Background" Value="#E9ECEF"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ProgressBar">
                        <Grid>
                            <Border Background="{TemplateBinding Background}" 
                                    CornerRadius="5"/>
                            <Border x:Name="PART_Indicator" 
                                    CornerRadius="5"
                                    HorizontalAlignment="Left">
                                <Border.Background>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                        <GradientStop Color="#0078D4" Offset="0"/>
                                        <GradientStop Color="#00A2FF" Offset="1"/>
                                    </LinearGradientBrush>
                                </Border.Background>
                                <Border.Effect>
                                    <DropShadowEffect BlurRadius="4" 
                                                      ShadowDepth="0" 
                                                      Color="#0078D4" 
                                                      Opacity="0.3"/>
                                </Border.Effect>
                            </Border>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <EventTrigger RoutedEvent="ProgressBar.ValueChanged">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation 
                                            Storyboard.TargetName="PART_Indicator"
                                            Storyboard.TargetProperty="Opacity"
                                            From="0.6" To="1.0" Duration="0:0:0.3"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Window.Effect>
        <DropShadowEffect BlurRadius="15" ShadowDepth="2" Opacity="0.1"/>
    </Window.Effect>

    <Grid Margin="20">
        <Grid.Resources>
            <DropShadowEffect x:Key="TextBoxShadow" BlurRadius="8" ShadowDepth="1" Opacity="0.1"/>
        </Grid.Resources>

        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="60"/>
            <RowDefinition Height="60"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="60"/>
        </Grid.RowDefinitions>

        <!-- 原路径 -->
        <StackPanel Grid.Row="0">
            <Label Content="当前数据位置：" 
                   FontWeight="Bold"
                   Margin="0,0,0,8"
                   FontSize="14"
                   Foreground="#212529"/>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                <RadioButton Content="国服" 
                             IsChecked="True"
                             Margin="0,0,15,0"
                             GroupName="ServerType"
                             Checked="RadioButton_Checked"
                             Tag="CN"/>
                <RadioButton Content="国际服" 
                             GroupName="ServerType"
                             Checked="RadioButton_Checked"
                             Tag="Global"/>
            </StackPanel>
        </StackPanel>
        <TextBox Grid.Row="1" 
                 Text="{Binding SourcePath, Mode=OneWay}" 
                 IsReadOnly="True"
                 Margin="0,0,0,20"
                 Style="{StaticResource TextBoxStyle}"/>

        <!-- 新路径 -->
        <Label Grid.Row="2" 
               Content="新数据位置：" 
               FontWeight="Bold"
               Margin="0,0,0,8"
               FontSize="14"
               Foreground="#212529"/>
        <Grid Grid.Row="3" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <TextBox x:Name="txtTargetPath" 
                     Text="{Binding TargetPath, Mode=TwoWay}"
                     IsReadOnly="True"
                     Style="{StaticResource TextBoxStyle}"
                     Grid.Column="0"
                     VerticalAlignment="Center"/>
            
            <Button x:Name="btnBrowse" 
                    Content="浏览..." 
                    Width="85" 
                    Height="36"
                    Margin="12,0,0,0"
                    Click="BtnBrowse_Click"
                    Grid.Column="1"
                    Style="{StaticResource ButtonStyle}"
                    FontSize="14"/>
        </Grid>

        <!-- 状态栏 -->
        <Grid Grid.Row="4" Margin="0,10,0,0">
            <Border Background="#F8F9FA" 
                    CornerRadius="4" 
                    Padding="12,8"
                    VerticalAlignment="Center"
                    Height="50">
                <Grid>
                    <TextBlock x:Name="lblStatus" 
                               Text="就绪" 
                               FontSize="13.5"
                               Foreground="#495057"
                               VerticalAlignment="Center"
                               Margin="0,0,0,20"/>
                    <StackPanel VerticalAlignment="Bottom">
                        <TextBlock x:Name="progressText"
                                   Text="0%"
                                   FontSize="12"
                                   Foreground="#6C757D"
                                   HorizontalAlignment="Right"
                                   Margin="0,0,0,4"/>
                        <ProgressBar x:Name="progressBar"
                                    Style="{StaticResource ProgressBarStyle}"
                                    Value="0"
                                    Maximum="100"
                                    VerticalAlignment="Bottom"
                                    Margin="0,4,0,0"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- 迁移按钮 -->
            <Button Content="开始迁移" 
                    HorizontalAlignment="Right" 
                    Width="110" 
                    Height="38"
                    Click="BtnMigrate_Click"
                    FontSize="14.5"
                    FontWeight="SemiBold"
                    Background="#28A745"
                    Style="{StaticResource ButtonStyle}">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#218838"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Resources>
            </Button>
        </Grid>
    </Grid>
</Window>
